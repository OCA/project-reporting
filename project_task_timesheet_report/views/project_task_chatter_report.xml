<odoo>
    <template
        id="task_chatter_report"
        inherit_id="project_task_report.task_chatter_report"
    >
        <xpath expr="//table" position="inside">
            <tr t-if="o.planned_hours">
                <th>Planned Hours</th>
                <td>
                    <span
                        t-esc="o.planned_hours"
                        t-options="{'widget': 'float_time'}"
                    />
                </td>
            </tr>
            <tr t-if="o.effective_hours">
                <th>Effective Hours</th>
                <td>
                    <span
                        t-esc="o.effective_hours"
                        t-options="{'widget': 'float_time'}"
                    />
                </td>
            </tr>
            <tr t-if="o.remaining_hours">
                <th>Remaining Hours</th>
                <td>
                    <span
                        t-esc="o.remaining_hours"
                        t-options="{'widget': 'float_time'}"
                    />
                </td>
            </tr>
        </xpath>
        <xpath expr="//div[hasclass('page')]/center[2]" position="before">
            <t t-if="o.timesheet_ids">
                <table class="table table-bordered">
                    <center>
                        <h3>Timesheets</h3>
                    </center>
                    <tr>
                        <th>Date</th>
                        <th>Employee</th>
                        <th>Description</th>
                        <th>Duration</th>
                    </tr>
                    <t t-foreach="o.timesheet_ids" t-as="timesheet">
                        <tr>
                            <td>
                                <span t-field="timesheet.date" />
                            </td>
                            <td>
                                <span t-field="timesheet.employee_id" />
                            </td>
                            <td>
                                <span t-field="timesheet.name" />
                            </td>
                            <td>
                                <span
                                    t-esc="timesheet.unit_amount"
                                    t-options="{'widget': 'float_time'}"
                                />
                            </td>
                        </tr>
                    </t>
                </table>
            </t>
        </xpath>
    </template>
</odoo>
