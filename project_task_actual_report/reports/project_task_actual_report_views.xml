<odoo>
    <record id="project_task_actual_report_view_pivot" model="ir.ui.view">
        <field name="name">Pivot view for project.task.actual.report</field>
        <field name="model">project.task.actual.report</field>
        <field name="arch" type="xml">
            <pivot string="Task changes">
                <field name="duration" type="measure" widget="float_time"/>
            </pivot>
        </field>
    </record>

    <record id="project_task_actual_report_view_graph" model="ir.ui.view">
        <field name="name">Graph view for project.task.actual.report</field>
        <field name="model">project.task.actual.report</field>
        <field name="arch" type="xml">
            <graph string="Task changes">
                <field name="duration" type="measure" widget="float_time"/>
            </graph>
        </field>
    </record>

    <record id="project_task_actual_report_view_tree" model="ir.ui.view">
        <field name="name">Tree view for project.task.actual.report</field>
        <field name="model">project.task.actual.report</field>
        <field name="arch" type="xml">
            <tree string="Task changes">
                <field name="date"/>
                <field name="task_id"/>
                <field name="user_id"/>
                <field name="stage_id"/>
                <field name="kanban_state"/>
                <field name="duration" widget="float_time"/>
            </tree>
        </field>
    </record>

    <record id="project_task_actual_report_view_search" model="ir.ui.view">
        <field name="name">Search view for project.task.actual.report</field>
        <field name="model">project.task.actual.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_id"/>
                <field name="project_id"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="stage_id"/>
                <field name="kanban_state"/>
                <field name="present_user_id"/>
                <field name="present_stage_id"/>
                <field name="present_kanban_state"/>
                <group string="Group by">
                    <filter string="Month"
                            context="{'group_by': 'date:month'}"/>
                    <filter string="Year"
                            context="{'group_by': 'date:year'}"/>
                    <filter string="User"
                            context="{'group_by': 'user_id'}"/>
                    <filter string="Stage"
                            context="{'group_by': 'stage_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="project_task_actual_report_view_form" model="ir.ui.view">
        <field name="name">Form view for project.task.actual.report</field>
        <field name="model">project.task.actual.report</field>
        <field name="arch" type="xml">
            <form string="Task changes">
                <sheet>
                    <group>
                        <group>
                            <field name="task_id"/>
                            <field name="user_id"/>
                            <field name="stage_id"/>
                            <field name="kanban_state"/>
                            </group>
                        <group>
                            <field name="prev_update"/>
                            <field name="date"/>
                            <field name="duration" widget="float_time"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <act_window
        id="project_task_actual_report_action"
        name="Actual task time"
        res_model="project.task.actual.report"
        view_mode="pivot,graph,tree"
    />

    <menuitem
            id="project_task_actual_report_menu"
            parent="project.menu_project_report"
            action="project_task_actual_report_action"
    />
</odoo>
